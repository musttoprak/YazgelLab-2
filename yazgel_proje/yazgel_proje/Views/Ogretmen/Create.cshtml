@model yazgel_proje.Models.Ogretmen

@{
    ViewData["Title"] = "Create";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbs5VgqTKt0P8Ex1Flnfwq1r0wOQSG8douHrwu8z2rsqBjGrbLc8BNE4vHxh5Xof" crossorigin="anonymous">
    <link href="~/css/form.css"/>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
    
    </style>
</head>
<body>
    <h1>Öğretmen Oluştur</h1>
   
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <img src="~/img/kou_logo.jpg" class="card-img-top" alt="Card Image">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ogretmenAdi" class="control-label mb-2"><b> Öğretmen Adı</b> </label>
                                <input asp-for="ogretmenAdi" placeholder="Öğretmen Adı Giriniz..." class="form-control" />
                                <span asp-validation-for="ogretmenAdi" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input  type="submit" value="Create" class="btn btn-outline-secondary w-100 mt-3" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>


