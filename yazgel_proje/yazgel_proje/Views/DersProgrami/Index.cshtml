@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbs5VgqTKt0P8Ex1Flnfwq1r0wOQSG8douHrwu8z2rsqBjGrbLc8BNE4vHxh5Xof" crossorigin="anonymous">
    <title>Your Page Title</title>
</head>
<body>
    <table class="table table-striped table-secondary">
        <thead>
            <tr>
                <th class="text-center">
                    Ders Id
                </th>

                <th class="text-center">
                    Ders Adı
                </th>

                <th class="text-center">
                    Öğretmen Adı
                </th>

                <th class="text-center">
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row" class="text-center">
                        @Html.DisplayFor(modelItem => item.dersProgramiId)
                    </td>

                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.dersAdi)
                    </td>

                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.ogretmenAdi)
                    </td>
                   
                    <td>
                        <div class="btn-group" aria-label="Actions">
                            <a class="btn btn-danger w-100" asp-action="Delete" asp-route-id="@item.dersProgramiId">
                                
                                <i class="fa-solid fa-trash"></i>
                            </a>
                            <a class="btn btn-dark w-100 ms-1" asp-action="Edit" asp-route-id="@item.dersProgramiId">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-dark justify-content-center" asp-action="Create">Ders Ekle</a>
    <!-- Bootstrap JS and Popper.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>
</html>
