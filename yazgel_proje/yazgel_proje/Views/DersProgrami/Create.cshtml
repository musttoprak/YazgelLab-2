<body>
    <h1>Ders Ekle</h1>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <img src="~/img/kou_logo.jpg" class="card-img-top" alt="Card Image">
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ogretmenAdi" class="control-label m-2">Öğretmen Adı - Soyadı</label>
                                <input asp-for="ogretmenAdi" class="form-control" placeholder="Örn: Önder Yakut"/>
                                <span asp-validation-for="ogretmenAdi" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="dersAdi" class="control-label m-2">Ders Adı</label>
                                <input asp-for="dersAdi" class="form-control" placeholder="Örn: Web tasarımı" />
                                <span asp-validation-for="dersAdi" class="text-danger"></span>
                            </div>

                            <div class="form-group p-1">
                                <label asp-for="sinif" class="control-label m-2">Sınıf</label>
                                <div class="input-group">
                                    <select asp-for="sinif" name="sinif" class="form-control">
                                        <option>Sınıf Seçiniz</option>
                                        <option>1040</option>
                                        <option>1044</option>
                                       @*  <option>1036</option>
                                        <option>1047</option> *@
                                    </select>
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa-solid fa-chevron-down"></i>
                                        </button>
                                    </div>
                                </div>
                                <span asp-validation-for="sinif" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-outline-secondary w-100 mt-3" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>

