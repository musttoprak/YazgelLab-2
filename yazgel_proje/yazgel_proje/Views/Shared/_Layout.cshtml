
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - yazgel_proje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="" asp-append-version="true" />
    <link rel="stylesheet" href="~/yazgel_proje.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg ">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-4 my-auto">
                    <a class="navbar-brand nav-link" asp-action="Index" asp-controller="Kisit"><img src="~/img/kou_logo.jpg" class="w-50 h-100">Kocaeli Üniversitesi</a>
                </div>
                <div class="col-lg-9 col-md-12 col-sm-12 my-auto">
                    <button class="navbar-toggler mt-2 ms-4" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item dropdown text-dark">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Ders İşlemleri
                                </a>
                                <ul class="dropdown-menu text-dark" aria-labelledby="navbarDropdown">
                                    <li><a class="nav-link text-dark" asp-controller="DersProgrami" asp-action="Create">Ders Ekle</a></li>
                                    <li><a class="nav-link text-dark" asp-controller="DersProgrami" asp-action="Delete">Ders Çıkar</a></li>
                                    <!-- <li><hr class="dropdown-divider"></li> -->
                                    <li><a class="nav-link text-dark" asp-controller="DersProgrami" asp-action="Index">Dersleri Gör</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown text-dark">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Öğretmen İşlemleri
                                </a>
                                <ul class="dropdown-menu text-dark" aria-labelledby="navbarDropdown">
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Ogretmen" asp-action="Create">Öğretmen Ekle</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Ogretmen" asp-action="Index">Öğretmen Çıkar</a></li>
                                    <!-- <li><hr class="dropdown-divider"></li> -->
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Ogretmen" asp-action="Index">Öğretmenleri Gör</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="Kisit" asp-action="Index">Ders Programını Gör</a></li>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
